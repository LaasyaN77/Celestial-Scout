            struct('name', 'Gamma Geminorum', 'RA', [6, 39, 10.3], 'Dec', [16, 22, 40.8]), ...
            struct('name', 'Zeta Geminorum', 'RA', [7, 5, 36.4], 'Dec', [20, 32, 0.2]), ...
