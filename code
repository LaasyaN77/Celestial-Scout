            struct('name', 'Epsilon Geminorum', 'RA', [6, 45, 29.2], 'Dec', [25, 6, 21.5]), ...
            struct('name', 'Nu Geminorum', 'RA', [6, 30, 27.9], 'Dec', [20, 11, 46.6]), ...
