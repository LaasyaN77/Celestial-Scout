% Visible constellations function
function visible_constellations_3D(dateStr, timeStr, latitude, longitude, tabGroup, visibleTextArea, nonVisibleTextArea)
    % Define constellations and their star coordinates
    constellations = struct( ...
        'Aries', [ ...
            struct('name', '41 Arietis', 'RA', [2, 51, 28.4], 'Dec', [27, 21, 54.2]), ...
            struct('name', 'Alpha Arietis', 'RA', [2, 8, 35.8], 'Dec', [23, 34, 56.2]), ...
            struct('name', 'Beta Arietis', 'RA', [1, 56, 2.1], 'Dec', [20, 55, 54.5]), ...
            struct('name', 'Gamma Arietis', 'RA', [1, 54, 54.9], 'Dec', [19, 25, 4.7]) ...
        ], ...
        'Taurus' , [...
            struct('name', 'Beta Taur', 'RA', [5, 27, 53.5], 'Dec', [28, 37, 42.9]), ...
            struct('name', 'Tau Tauri', 'RA', [4, 43, 45.9], 'Dec', [23, 00, 19.4]), ...
            struct('name', 'Epsilon Tauri', 'RA', [4, 30, 5.8], 'Dec', [19, 14, 11.6]), ...
            struct('name', 'Delta Tauri', 'RA', [4, 24, 23.8], 'Dec', [17, 36, 6.7]), ...
            struct('name', 'Atlas', 'RA', [3, 50, 40.1], 'Dec', [24, 07, 51]), ...
            struct('name', 'Delta Tauri', 'RA', [4, 24, 23.8], 'Dec', [17, 36, 6.7]), ...
            struct('name', 'Gamma Tauri', 'RA', [4, 21, 14.1], 'Dec', [15, 41, 19.6]), ...
            struct('name', 'Lambda Tauri', 'RA', [4, 2, 5.0], 'Dec', [12, 33, 42.5]), ... 
            struct('name', 'Omicron Tauri', 'RA', [3, 36, 10.6], 'Dec', [9, 7, 3.7]), ...
            struct('name', 'Lambda Tauri', 'RA', [4, 2, 5.0], 'Dec', [12, 33, 42.5]), ... 
            struct('name', 'Gamma Tauri', 'RA', [4, 21, 14.1], 'Dec', [15, 41, 19.6]), ...
            struct('name', 'Alpha Tauri', 'RA', [4, 37, 22.5], 'Dec', [16, 33, 36.9]), ...
            struct('name', 'Zeta Tauri', 'RA', [5, 39, 9.4], 'Dec', [21, 9, 28.9]) ...
       ], ...
       'Gemini' , [...
            struct('name', 'Alpha Geminorum', 'RA', [7, 36, 12.4], 'Dec', [31, 49, 55.3]), ...
            struct('name', 'Tau Geminorum', 'RA', [7, 12, 44.8], 'Dec', [30, 12, 11.7]), ...
